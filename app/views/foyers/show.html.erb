<%= render :partial => "nav" %>

<% form_for(@foyer) do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <legend>Responsable</legend>

    <%= f.label 'Nom:' %>
    <%= f.text_field :chef_nom, :disabled => true %><br />

    <%= f.label 'Prenom:' %>
    <%= f.text_field :chef_prenom, :disabled => true  %><br />
    <%= f.label 'Sexe:' %>
    <%= f.enum_select :chef_sex, :disabled => true  %><br />
    <%= f.label 'Date de Naissance:' %>
    <%= f.date_select(:chef_date_naissance, :disabled => true ) %><br />
    <%= f.label 'Situation Familiale:' %>
    <%= f.enum_select :situation_familiale, :disabled => true  %><br />
    <%= f.label :adresse_numero %>
    <%= f.text_field :adresse_numero, :disabled => true  %><br />

    <%= f.label :adresse_rue %>
    <%= f.text_field :adresse_rue, :disabled => true  %><br />

    <%= f.label :adresse_additionel %>
    <%= f.text_field :adresse_additionel, :disabled => true  %><br />

    <%= f.label :adresse_chez %>
    <%= f.text_field :adresse_chez, :disabled => true  %><br />

    <%= f.label :adresse_code_postal %>
    <%= f.text_field :adresse_code_postal, :disabled => true  %><br />

    <%= f.label :telephone_portable %>
    <%= f.text_field :telephone_portable, :disabled => true  %><br />

    <%= f.label :telephone_fixe %>
    <%= f.text_field :telephone_fixe, :disabled => true  %><br />

    <%= f.label 'Email' %>
    <%= f.text_field :chef_email, :disabled => true %><br />


  </fieldset>
  <br />
  <fieldset>
    <legend>Informations</legend>

    <%= f.label 'Nombre d\'Enfants' %>
    <%= f.text_field :nombre_enfants, :disabled => true  %><br />

    <%= f.label :nbr_colis_a_distribuer %>
    <%= f.text_field :nbr_colis_a_distribuer, :disabled => true  %><br />

    <%= f.label 'Dette cumulée' %>
    <%= f.text_field :dette_cumulee, :disabled => true  %><br />

    <%= f.label 'Remarques' %>
    <%= f.text_area :information_additionnelle, :cols => 28, :rows => 5, :disabled => true %><br />


    <%= f.label :inscription_complete %>
    <%= f.check_box :inscription_complete, :disabled => true  %><br />

  </fieldset>
  <br />
  <fieldset>
    <p>
      <%= f.label :sdf %>
      <%= f.check_box :sdf, :disabled => true  %>
    </p>

    <p>
      <%= f.label :demandeur_asile %>
      <%= f.check_box :demandeur_asile, :disabled => true  %>
    </p>
    <p>
      <%= f.label :handicape %>
      <%= f.check_box :handicape, :disabled => true  %>
    </p>
    <p>
      <%= f.label :diabetique %>
      <%= f.check_box :diabetique, :disabled => true  %><br />
    </p>
    <p>
      <%= f.label :hallal %>
      <%= f.check_box :hallal, :disabled => true  %><br />
    </p>
    <p>
      <%= f.label :sans_porc %>
      <%= f.check_box :sans_porc, :disabled => true  %><br />
    </p>
    <p>
      <%= f.label :lettre_AS %>
      <%= f.check_box :lettre_AS, :disabled => true  %><br />
    </p>
  </fieldset>
  <br />
  
  <fieldset>
    <legend>Membres additionels</legend>
    <% if @foyer.membres.size > 0 %>
      <table >
        <tr>
          <th>Nom</th>
          <th>Prenom</th>
          <th>Relation</th>
          <th>Sexe</th>
          <th>Date de Naissance</th>
          <th colspan="2" />
        </tr>

        <% @foyer.membres.each do |membre| %>
          <tr>
            <td><%=h membre.nom %></td>
            <td><%=h membre.prenom %></td>
            <td><%=h membre.relation %></td>
            <td><%=h membre.sexe %></td>
            <td><%=h membre.date_de_naissance %></td>

            <td><%= link_to 'Éditez', edit_foyer_membre_path(@foyer, membre) %></td>
            <td><%= link_to 'Suprimez', foyer_membre_path(@foyer, membre),
              :confirm => 'Vous êtes sûr ?', :method => :delete %></td>

          </tr>
        <% end %>
      </table>
    <% else %>
      Aucun membre additionel.
    <% end  %>

  </fieldset>


  <br />

  <%= link_to 'Éditez', edit_foyer_path(@foyer) %> |
  <%= link_to 'Rajoutez un membre', new_foyer_membre_path(@foyer) %><br />
  <br />
  --<br />
  Dernière mise à jour: <%=  @foyer.updated_at.strftime('%d %b %Y - %Hh%M') %>
<% end %>


